#include "lists.h"
/**
 * add - adds two numbers
 * @a: first parameter
 * @b: second parameter
 *
 * Return: sum of two numbers
 */

int add(int a, int b)
{
	return (a + b);
}

/**
 * sub - performs subtraction
 * @a: first parameter
 * @b: second parameter
 *
 * Return: differnece numbers
 */
int sub(int a, int b)
{
	return (a - b);
}

/**
 * mul - multiply two numbers
 * @a: first parameter
 * @b: second parameter
 *
 * Return: product of two numbers
 */
int mul(int a, int b)
{
	return (a * b);
}
/**
 * div - divines one number with another
 * @a: first parameter
 * @b: second parameter
 *
 * Return: difference
 */
int div(int a, int b)
{
	return (a / b);
}

/**
 * mod - applies modulus operator on two numbers
 * @a: first parameter
 * @b: second parameter
 *
 * Return: remainder
 */
int mod(int a, int b)
{
	return (a % b);
}
